{{!-- tasks --}}

<div class="container-custom container-md col-md-12 shadow-lg p-5 min-vh-50">
    <div class="row justify-content-center">
        <div class="col-md-7 card me-1 mb-2 border shadow-lg justify-content-center">Task</div>
        <div class="col-md-1 me-1  d-flex justify-content-center">
            <input class="form-check-input mt-3 p-3 mb-2 border shadow-lg" type="checkbox">
        </div>
        <div class="col-md-3 p-3 mw 100 d-flex justify-content-center border shadow-lg">
            <div class="btn btn-info me-1" data-bs-toggle="modal" data-bs-target="#updateTaskModal">update</div>
            <div class="btn btn-danger">Delete</div>
        </div>

    </div>
