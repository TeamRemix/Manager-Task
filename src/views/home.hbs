{{!-- Modal add task--}}

<div class="modal fade" id="addTaskModal" tabindex="-1" aria-labelledby="addTaskModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content content-modal-custom ">
            <div class="modal-header">
                <h5 class="modal-title" id="addTask">Task Manager</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <label for="taskTitle" class="form-laber">Task title</label>
                        <input type="text" name="taskTitle" class="form-control border border-dark mb-2" id="taskTitle">
                        <label for="taskDes" class="form-label">Task description</label>
                        <input type="text" name="taskDes" class="form-control  border border-dark" id="taskDes">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary" id="saveChangeTask">Create</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

{{!-- Modal edition task --}}

<div class="modal fade" id="updateTaskModal" tabindex="-1" aria-labelledby="addTaskModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content content-modal-custom ">
            <div class="modal-header">
                <h5 class="modal-title" id="updateTask">Update Task</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <label for="editionTitle" class="form-label">Title edition</label>
                        <input type="text" name="titleEdit" class="form-control border border-dark" id="titleEdit">
                        <label for="editionDes" class="form-label">description edition</label>
                        <input type="text" name="editionDes" class="form-control  border border-dark" id="editionDes">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary" id="saveChangeTask">Save changes</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>